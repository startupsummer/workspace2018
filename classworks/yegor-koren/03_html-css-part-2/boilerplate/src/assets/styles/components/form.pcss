.form {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

  &__wraper{
    width: 100%;
    display: flex;
    justify-content: space-between;
  }
  &__input {
    width: calc(50% - 10px);
    height: 60px;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 30px;
  }
  &__input--message {
    display: block;
    width: 100%;
    height: 240px;
  }
}
