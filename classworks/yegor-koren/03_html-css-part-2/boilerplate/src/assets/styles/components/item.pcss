.item {
  width: 100%;
  height: 100%;
  font-size: 25px;
  color: #807878;
  display: flex;
  justify-content: space-between;
  align-items: center;

  &__icon-container {
    width: 30px;
    height: auto;
    display: flex;
    justify-content: center;
    margin-left: 30px;
  }
  &__text {
    margin-right: 30px;
    cursor: 	default;
  }
  &:hover {
    background-color: #0e0a0b;
  }
  &:hover &__icon{
    color: #ff66a3;
  }
  &:hover &__text{
    color: #fff;
  }
}
