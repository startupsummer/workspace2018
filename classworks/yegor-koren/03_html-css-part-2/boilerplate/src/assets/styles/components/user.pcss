.user {
  height: 60px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;

  &__avatar {
    width: 48;
    height: 48;
  }
  &__info {
    width: auto;
    height: auto;
    text-align: right;
  }
  &__name {
    font-size: 25px;
    color: #fff;
    font-weight: bold;
  }
  &__job-position {
    font-size: 15px;
    color: #807878;
  }
}
