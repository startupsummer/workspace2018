main {
  .greetings {
    padding-top: 100px;
    padding-bottom: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }  

  .greetings__item {
    width: 90%;
    text-align: center;
  }
}
  
@media (min-width: 900px) {
  main {
    .greetings__item {
      width: 50%;
    }
  }
}