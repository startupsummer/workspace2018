.grid {
    padding-top: 20vw;
    width: 78vw;
    height: fit-content;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.grid-row {
    height: fit-content;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.grid-column__element {
    width: 26vw;
    height: 90%;
    padding: 2%
}

@media only screen and (max-width: 1500px) {
    .grid {
        padding-top: 15vw;
    }
}

@media only screen and (max-width: 1300px) {
    .grid {
        padding-top: 0;
    }
}