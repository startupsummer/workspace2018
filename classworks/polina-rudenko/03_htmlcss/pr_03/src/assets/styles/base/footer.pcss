.footer{
  position: fixed;
  bottom: 0;
  font-size: 20px;
  text-align: center;
  padding: 15px;
}

.footer__icon{
  padding: 0 10px;
  color: #9e9e9e;
}

.footer__icon:hover{
  color: #fff;
}

.footer__item{
    display: inline-block;
    list-style-type: none;}

.footer__place{
    display: flex;
    justify-content: center;
}

@media (max-width: 899px){
.footer{
  position: fixed;
  top: 100vw;
  font-size: 20px;
  text-align: center;
  padding: 15px;
}
}
