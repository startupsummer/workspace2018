.inputs__item {
  position: relative;
  display: block;
  border: 0;
  outline: 0;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 0.35em;
  padding: 0.75em 1em;
  box-shadow: inset 0 0.1em 0.1em 0 rgba(0, 0, 0, 0.05);
  border: solid 1px rgba(0, 0, 0, 0.15);
  margin: 15px 10px;
  font-size: 17px;
  }

@media (min-width: 500px){
.inputs__item {
    width: 26vw;
   }
  }
@media (max-width: 500px){
.inputs__item {
    width: 80vw;
   }
  }
