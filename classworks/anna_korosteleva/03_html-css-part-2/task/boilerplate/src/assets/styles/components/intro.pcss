.intro{
    background: url("../images/banner.jpg");

&__text{
    padding: 25% 10%;
    text-align: center;
    color: white;
}

&__h1{
    font-size: 1.6em;
}

&__h3{
    font-size: 0.9em;
}

&__h1_underline{
    text-decoration: underline;
}

&__img{
    display: none;
}
}
@media (max-width: 700px){
    .intro__img{
        display: block;
        width: 50px;
        padding: 20px;
        position: fixed;
    }
    .intro__img:hover{
        background-color: rgba(0,0,0,0.3);
    }
}