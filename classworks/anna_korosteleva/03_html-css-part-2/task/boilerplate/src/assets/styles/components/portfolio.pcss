.portfolio{
    padding: 20px;
    height: auto;
&__caption{
    text-align: center;
    font-size: 1.3em;
    color: black;
    font-weight: 100;
}

&__img{
    display: none;
}

&__description{
    margin: 20px;
}
}
@media (max-width: 700px){
    .portfolio__img{
      display: flex;
      margin: auto;
      height: 100px;
    }
}
