@reset-global pc;

html {
    width: 100%;
    height: 100%;
    background: no-repeat url("/images/banner.jpg");
    background-size: cover;
    overflow-x: hidden;
    box-sizing: border-box;
}

*,
::before,
::after {
  box-sizing: inherit;
}

img {
  max-width: 100%;
  height: auto;
}

body {
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: lighter;
    margin: 0;
    box-sizing: border-box;
}
