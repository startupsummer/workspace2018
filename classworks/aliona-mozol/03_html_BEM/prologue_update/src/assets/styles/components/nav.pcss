.nav-item {
  color: rgb(29, 23, 23);

  &:hover {
    background-color: rgb(29, 23, 23);
  }

  &:hover &__icon {
    color: rgb(203, 102, 149);
  }

  &:hover &__link {
    color: #f1f1f1;
  }

  &__icon {
    color: #818181;
  }

  &__link {
    padding: 17px 34px;
    text-decoration: none;
    color: #818181;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    font-size: 1.3em;
  }
}
