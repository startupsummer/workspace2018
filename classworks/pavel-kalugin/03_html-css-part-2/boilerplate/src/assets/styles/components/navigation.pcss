.navigation {
  color: gray;

  &__link {
    padding-left: 30px;
    padding-right: 30px;

    height: 50px;

    display: flex;
    justify-content: space-between;

    text-decoration: none;
    color: #666;
    align-items: center;
    font-size: 20px;
  }

  &__link:hover {
    background-color: rgba(255,255,255, 0.3);
    color: white;
  }

  &__link:hover .fa {
    color: rgba(140, 10, 30, 1);
  }
}
