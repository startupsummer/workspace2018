.button {
  width: 200px;
  background-color: #8ebebc;
  background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15)), url(../images/overlay.png);
  border-radius: 0.35em;
  color: #fff;
  padding: 0.75em;
  border: 0;
  font-size: 24px;
}

@media(min-width: 900px) {
  .button {
    padding: 0.75em 2.5em;
    width: 300px;
  }
}
